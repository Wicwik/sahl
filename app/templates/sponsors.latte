{**
* @param string   	$basePath web base path
* @param string 	$imgFolder images folder path
* @param array    	$sponsors  array of sponsors
*}

<section id="sponsors" class="col-md-11 col-lg-8 content hidden-xs">
  <div class="clearfix">
    <h2>Sponzori</h2>
  </div>
  <div>
    {foreach $sponsors as $sponsor}
      <div style="width: 100%; display: block">
        <figure class="col-md-4 col-lg-4">
          <a href="{$sponsor->anchor}" target="_blank" title="PrejsÅ¥ na: {$sponsor->label}">
            {if file_exists($imgFolder . '/' . $sponsor->image)}
              <img class="img img-responsive" alt="{$sponsor->label}" src="{$basePath}/{$imgFolder}/{$sponsor->image}" />
            {/if}
          </a>
        </figure>
      </div>
    {/foreach}
  </div>
</section>