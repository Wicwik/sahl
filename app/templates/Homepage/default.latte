{block content}

{*
<div id="slider" class='row'>
    {foreach $latests as $latest}
        {if $iterator->last}
            <img src='{$basePath}{$imgFolder}{$latest->thumbnail}' class='img-responsive' 
                alt="{$latest->thumbnail}" />
        {/if}

        <p data-src="{$basePath}/{$imgFolder}/{$latest->thumbnail}">
            <a n:href="Post:show $latest->id">
                {$latest->title}
            </a>
        </p>
    {/foreach}
</div>
*}

<div class="alert alert-info">
    Hlavnou myšlienkou vzniku Spišskej amatérskej hokejovej ligy bolo hrať priateľský hokej na amatérskej úrovni, 
    samozrejme v rámci pravidiel. Po dohode siedmich mužstiev vznikla  
    <a n:href="Rules:all">SAHL – Pravidlá a Smernice</a>.
</div>

<section id="posts" class="primary-content">
    <article n:foreach="$posts as $post" class="clearfix">
        <header class="clearfix">
            <a n:href="Post:view $post">
                <h2>{$post->title}</h2>
            </a>
        </header>

        <figure class="col-md-5 col-lg-4">
            {if file_exists($imgFolder . "/" . $post->thumbnail)}
                <img src='{$basePath}/{$imgFolder}/{$post->thumbnail}' class='img img-responsive' />
            {else}
                <img src='{$basePath}/{$imgFolder}/{$default}' class="img img-responsive" />
            {/if}
        </figure>

        <main class="col-md-7 col-lg-8">
            <time datetime="{$post->created_at|date:'d.m.Y'}" pubdate>
                {$post->created_at|date:'d.m.Y'}
            </time>
            <button type="button" 
                data-toggle="collapse" data-target="#article-{$iterator->counter}">
                <i class="glyphicon glyphicon-menu-down"></i>
            </button>
            <div id="article-{$iterator->counter}" class="collapse">
                {$post->content|noescape}
            </div>
        </main>
    </article>
</section>
{/block}

{block scripts}
    {include #parent}
{/block}
