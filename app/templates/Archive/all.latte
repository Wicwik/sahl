{block content}

<h1 n:block="title">Archív</h1>

<section id="archive">
	<p n:if="$user->loggedIn">
	    <a n:href="add#nav" class='btn btn-primary'>
	        <span class="glyphicon glyphicon-plus"></span>
	        Pridať
	    </a>
	</p>

    <div class="table-responsive">
        <table class="table table-striped">
            <tbody>
                {foreach $archive as $arch}
                    <tr>
                        <td>
                            <a n:href="view, $arch->id" title="Prejsť na archív">
                            	{$arch->title}
                            </a>
                        </td>
                        <td n:if="$user->loggedIn">
                            <a n:href="edit#nav, $arch->id" class="text-success text-center" title="Upraviť">
                                <span class="glyphicon glyphicon-pencil"></span>
                            </a>
                        </td>
                    </tr>
                {/foreach}
            </tbody>
        </table>
    </div>
</section>
